<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chapter7UploadImage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="title">
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title_detail">
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/product_name</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>

    <style name="text_detail">
        <item name="android:textAlignment">textStart</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button">
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>
</resources>